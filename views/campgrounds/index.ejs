<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <p>
        <a class="btn btn-success" href="/campgrounds/new">New Campground</a>
    </p>

    <% for(let camp of camps) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=camp.image%>" class="img-fluid rounded-start" alt="image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=camp.title%>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-body-secondary">
                            By <%=camp.author.username%>
                        </h6>
                        <p class="card-text">
                            <%=camp.description%>
                        </p>
                        <p class="card-text">
                            <b>Price: $<%=camp.price%></b>
                        </p>
                        <p class="card-text"><small class="text-body-secondary">Location: <%=camp.location %>
                            </small></p>
                        <a href="/campgrounds/<%=camp.id%>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>