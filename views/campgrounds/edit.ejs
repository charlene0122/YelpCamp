<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit <%=camp.title%>
        </h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=camp.id%>?_method=PUT" method="POST" novalidate class="validate-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" class="form-control" name="campground[title]" value="<%=camp.title%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" class="form-control" name="campground[location]"
                        value="<%=camp.location%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" id="price" class="form-control" name="campground[price]" placeholder="0.00"
                            value="<%=camp.price%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" id="description" class="form-control" name="campground[description]"
                        required><%=camp.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="file" name="image" class="form-control" id="inputGroupFile02" multiple>
                    <label class="input-group-text" for="inputGroupFile02">Upload</label>
                </div>
                <div class="mb-3">
                    <%camp.images.forEach((image, i)=> { %>
                        <img src="<%=image.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input class="form-check-input" type="checkbox" value="<%=image.filename%>"
                                name="deleteImages[]" id="image-<%=i%>">
                            <label class="form-check-label" for="image-<%=i%>">
                                Delete
                            </label>
                        </div>
                        <%})%>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds">Cancel</a>

        </div>
    </div>